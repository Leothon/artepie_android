<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="PlayPauseView">
        <attr name="bg_color" format="color" />
        <attr name="btn_color" format="color" />
        <attr name="gap_width" format="dimension|reference" />
        <attr name="space_padding" format="dimension|reference" />
        <attr name="anim_duration" format="integer" />
        <attr name="anim_direction">
            <enum name="positive" value="1" />
            <enum name="negative" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="MDCheckBox">
        <attr name="size" format="dimension" />
        <attr name="color_border" format="color" />
        <attr name="color_background" format="color" />
    </declare-styleable>


    <declare-styleable name="LinearGradientTextView">
        <attr name="lineNumber" format="integer"></attr>
        <attr name="showTime" format="integer"></attr>
        <attr name="textColor" format="color"></attr>
        <attr name="showStyle">
            <enum name="UNIDIRECTION" value="0"></enum>
            <enum name="TWOWAY" value="1"></enum>
        </attr>

    </declare-styleable>
</resources>