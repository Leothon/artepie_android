<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.leothon.cogito.View.ObserveScrollView
        android:id="@+id/scroll_mic2_class"
        android:layout_above="@+id/bottom_mic2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/dividerColor"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="课程简介"
                    android:textSize="@dimen/littleTitle"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:paddingLeft="15dp"
                    android:paddingTop="15dp"/>
                <TextView
                    android:id="@+id/class_detail_desc_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:text="@string/content"
                    android:textSize="@dimen/contentSize"
                    android:textColor="@color/fontColor"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_height="1dp"
                    android:background="@color/dividerColor"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="主讲人简介"
                    android:textSize="@dimen/littleTitle"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:paddingLeft="15dp"
                    android:paddingTop="15dp"/>
                <TextView
                    android:id="@+id/class_detail_author_desc_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:text="作者自己的介绍，可以详细描述自己的简历和取得的成就"
                    android:textSize="@dimen/contentSize"
                    android:textColor="@color/fontColor"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/dividerColor"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="短评"
                    android:textSize="@dimen/littleTitle"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:paddingLeft="15dp"
                    android:paddingTop="15dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/comment_back"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.makeramen.roundedimageview.RoundedImageView
                            android:id="@+id/comment_first_img2"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_margin="10dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/defalutimg"
                            app:riv_oval="true" />

                        <TextView
                            android:id="@+id/comment_first_name2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:layout_toRightOf="@+id/comment_first_img2"
                            android:text="第一个评论的名字"
                            android:textColor="@color/black"
                            android:textSize="@dimen/contentSize" />

                        <TextView
                            android:id="@+id/comment_first_content2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/comment_first_name2"
                            android:paddingBottom="5dp"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:paddingTop="5dp"
                            android:text="@string/content"
                            android:textColor="@color/fontColor"
                            android:textSize="@dimen/tipsSize" />

                        <TextView
                            android:id="@+id/comment_first_like2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/comment_first_content2"
                            android:layout_marginBottom="15dp"
                            android:layout_marginLeft="15dp"
                            android:drawableLeft="@drawable/baseline_favorite_black_18"
                            android:text="12.5k" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@color/white" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.makeramen.roundedimageview.RoundedImageView
                            android:id="@+id/comment_second_img2"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_margin="10dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/defalutimg"
                            app:riv_oval="true" />

                        <TextView
                            android:id="@+id/comment_second_name2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:layout_toRightOf="@+id/comment_second_img2"
                            android:text="第二个评论的名字"
                            android:textColor="@color/black"
                            android:textSize="@dimen/contentSize" />

                        <TextView
                            android:id="@+id/comment_second_content2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/comment_second_name2"
                            android:paddingBottom="5dp"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:paddingTop="5dp"
                            android:text="@string/content"
                            android:textColor="@color/fontColor"
                            android:textSize="@dimen/tipsSize" />

                        <TextView
                            android:id="@+id/comment_second_like2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/comment_second_content2"
                            android:layout_marginBottom="15dp"
                            android:layout_marginLeft="15dp"
                            android:drawableLeft="@drawable/baseline_favorite_black_18"
                            android:text="12.5k" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@color/white" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.makeramen.roundedimageview.RoundedImageView
                            android:id="@+id/comment_third_img2"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_margin="10dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/defalutimg"
                            app:riv_oval="true" />

                        <TextView
                            android:id="@+id/comment_third_name2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:layout_toRightOf="@+id/comment_third_img2"
                            android:text="第三个评论的名字"
                            android:textColor="@color/black"
                            android:textSize="@dimen/contentSize" />

                        <TextView
                            android:id="@+id/comment_third_content2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/comment_third_name2"
                            android:paddingBottom="5dp"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:paddingTop="5dp"
                            android:text="@string/content"
                            android:textColor="@color/fontColor"
                            android:textSize="@dimen/tipsSize" />

                        <TextView
                            android:id="@+id/comment_third_like2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/comment_third_content2"
                            android:layout_marginBottom="15dp"
                            android:layout_marginLeft="15dp"
                            android:drawableLeft="@drawable/baseline_favorite_black_18"
                            android:text="12.5k" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@color/white" />

                    <TextView
                        android:id="@+id/comment_more_class2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/baseline_keyboard_arrow_right_black_18"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:text="查看全部评论"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </com.leothon.cogito.View.ObserveScrollView>
    <RelativeLayout
        android:id="@+id/bottom_mic2"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:elevation="3dp"
        android:background="@drawable/ripple"
        android:clickable="true">

        <TextView
            android:id="@+id/class_free_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击试学"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textSize="@dimen/littleTitle"
            android:background="@drawable/textviewbackground"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_centerInParent="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:id="@+id/class_detail_buy_btn_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="购买课程"
            android:textSize="@dimen/littleTitle"
            android:textColor="@color/white"
            android:background="@drawable/textviewbackgroundshow"
            android:layout_centerInParent="true"
            android:layout_alignParentEnd="true"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginRight="15dp"/>
    </RelativeLayout>


</RelativeLayout>