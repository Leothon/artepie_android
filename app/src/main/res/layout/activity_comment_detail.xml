<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Mvp.View.Activity.AskDetailActivity.CommentDetailActivity"
    android:background="@color/white"
    android:fitsSystemWindows="true">

    <include
        android:id="@+id/comment_bar"
        layout="@layout/toolbar"/>
    <android.support.v4.widget.SwipeRefreshLayout
        android:layout_below="@+id/comment_bar"
        android:layout_above="@+id/comment_in_comment_detail"
        android:id="@+id/swp_comment_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/comment_detail_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        </android.support.v7.widget.RecyclerView>
    </android.support.v4.widget.SwipeRefreshLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/comment_in_comment_detail"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:cardElevation="3dp"
        app:cardCornerRadius="5dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="5dp"
        android:foreground="?android:attr/selectableItemBackground">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="评论，请文明发言"
            android:textSize="@dimen/contentSize"
            android:layout_margin="10dp"/>
    </android.support.v7.widget.CardView>
</RelativeLayout>