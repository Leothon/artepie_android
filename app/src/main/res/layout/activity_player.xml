<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Mvp.View.Activity.PlayerActivity.PlayerActivity"
    android:background="@color/white">

    <include
        android:id="@+id/video_bar"
        layout="@layout/toolbar"
        android:visibility="gone"/>
    <com.shuyu.gsyvideoplayer.video.StandardGSYVideoPlayer
        android:id="@+id/video_player"
        android:layout_width="match_parent"
        android:layout_height="200dp">

    </com.shuyu.gsyvideoplayer.video.StandardGSYVideoPlayer>

    <LinearLayout
        android:id="@+id/content_video"
        android:layout_below="@+id/video_player"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="@drawable/ripple"
        android:clickable="true"
        android:elevation="3dp">
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/video_author_icon"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                app:riv_oval="true"
                android:src="@drawable/defalutimg"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:id="@+id/video_author_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:text="中国新闻网"
                android:textSize="@dimen/tipsSize"
                android:layout_marginBottom="5dp"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">
            <TextView
                android:id="@+id/video_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="声乐的历史"
                android:textSize="@dimen/littleTitle"
                android:layout_gravity="top"
                android:layout_marginTop="8dp"
                android:textColor="@color/black"
                android:maxLines="1"/>
            <TextView
                android:id="@+id/video_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="声乐的出现背景"
                android:textSize="@dimen/contentSize"
                android:layout_gravity="center|start"
                android:layout_marginTop="8dp"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp"
                android:layout_gravity="top">
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/baseline_remove_red_eye_black_18"
                        android:tint="@color/fontColor"
                        android:layout_gravity="start"/>
                    <TextView
                        android:id="@+id/view_count"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="352"
                        android:layout_gravity="center"/>
                </FrameLayout>
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/baseline_favorite_black_18"
                        android:tint="@color/fontColor"
                        android:layout_gravity="start"/>
                    <TextView
                        android:id="@+id/fav_count"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="120"
                        android:layout_gravity="center"/>
                </FrameLayout>
            </LinearLayout>


        </FrameLayout>

    </LinearLayout>


    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/dividerColor"
        android:layout_below="@+id/content_video"/>


    <LinearLayout
        android:id="@+id/line_divider"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/divider"
        android:orientation="horizontal">
        <View
            android:layout_width="0dp"
            android:layout_height="1sp"
            android:layout_weight="1"
            android:background="@color/fontColor"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/divider_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="评论"
            android:textSize="@dimen/tipsSize"
            android:textColor="@color/fontColor"
            android:layout_gravity="center"
            android:gravity="center"/>
        <View
            android:layout_width="0dp"
            android:layout_height="1sp"
            android:layout_weight="1"
            android:background="@color/fontColor"
            android:layout_gravity="center"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/line_divider"
        android:id="@+id/video_comment_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp">

    </android.support.v7.widget.RecyclerView>



    <android.support.v7.widget.CardView
        android:id="@+id/comment_in"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:cardElevation="3dp"
        app:cardCornerRadius="5dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="评论，请文明发言"
            android:textSize="@dimen/contentSize"
            android:layout_margin="10dp"/>
    </android.support.v7.widget.CardView>

</RelativeLayout>