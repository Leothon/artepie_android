<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_bottom"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:layout_alignParentBottom="true"
    app:cardElevation="3dp"
    android:animateLayoutChanges="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="5">
        <com.leothon.cogito.Weight.BottomButton
            android:id="@+id/bottom_btn_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/ripple">

        </com.leothon.cogito.Weight.BottomButton>
        <com.leothon.cogito.Weight.BottomButton
            android:id="@+id/bottom_btn_mic_class"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/ripple">

        </com.leothon.cogito.Weight.BottomButton>
        <com.leothon.cogito.Weight.BottomButton
            android:id="@+id/bottom_btn_ask"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/ripple">

        </com.leothon.cogito.Weight.BottomButton>


        <com.leothon.cogito.Weight.BottomButton
            android:id="@+id/bottom_btn_bag"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/ripple">

        </com.leothon.cogito.Weight.BottomButton>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <com.leothon.cogito.Weight.BottomButton
                android:id="@+id/bottom_btn_about"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ripple">
            </com.leothon.cogito.Weight.BottomButton>
            <View
                android:id="@+id/notice_bot_host"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/red_bot"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="25dp"
                android:visibility="gone"/>
        </RelativeLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>