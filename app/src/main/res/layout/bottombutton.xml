<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="53dp"
    android:layout_alignParentBottom="true"
    app:cardElevation="3dp"
    android:clipToPadding="false"
    android:clipChildren="false"
    android:animateLayoutChanges="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="5">
        <com.leothon.cogito.Weight.BottomButton
            android:id="@+id/bottom_btn_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/ripple">

        </com.leothon.cogito.Weight.BottomButton>
        <com.leothon.cogito.Weight.BottomButton
            android:id="@+id/bottom_btn_article"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/ripple">

        </com.leothon.cogito.Weight.BottomButton>
<!--        <com.leothon.cogito.Weight.BottomButton-->
<!--            android:id="@+id/bottom_btn_add"-->
<!--            android:layout_width="0dp"-->
<!--            android:layout_height="match_parent"-->
<!--            android:layout_weight="1"-->
<!--            android:background="@drawable/addback"-->
<!--            android:layout_margin="10dp">-->

<!--        </com.leothon.cogito.Weight.BottomButton>-->







        <RelativeLayout
            android:id="@+id/bottom_btn_add"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:riv_oval="true"
                android:src="@drawable/addback"
                android:layout_centerInParent="true"/>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/add"
                android:layout_centerInParent="true"/>



        </RelativeLayout>








        <com.leothon.cogito.Weight.BottomButton
            android:id="@+id/bottom_btn_ask"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/ripple">

        </com.leothon.cogito.Weight.BottomButton>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <com.leothon.cogito.Weight.BottomButton
                android:id="@+id/bottom_btn_about"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ripple">
            </com.leothon.cogito.Weight.BottomButton>
            <View
                android:id="@+id/notice_bot_host"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/red_bot"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="25dp"
                android:visibility="gone"/>
        </RelativeLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>