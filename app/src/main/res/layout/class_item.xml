<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/dividerColor"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple"
        android:paddingEnd="8dp">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/class_img"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:src="@drawable/defalutimg"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            android:foreground="@drawable/gradient_background"/>
        <RelativeLayout
            android:layout_toRightOf="@id/class_img"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@+id/price_tag"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">




            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/class_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="声乐的出现过程"
                android:maxLines="2"
                android:textSize="@dimen/tipsSize"
                android:layout_margin="3dp"
                android:textColor="@color/fontColor"/>

            <TextView
                android:id="@+id/class_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="声乐的历史"
                android:textSize="@dimen/littleTitle"
                android:textColor="@color/black"
                android:layout_alignParentTop="true"/>
            <TextView
                android:id="@+id/class_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0人次已观看"
                android:textSize="@dimen/tipsSize"
                android:textColor="@color/fontColor"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/price_tag"
            android:layout_alignParentEnd="true"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/colorPrimary"
            app:cardCornerRadius="3dp"
            android:layout_centerInParent="true"
            android:layout_marginEnd="10dp">
            <TextView
                android:id="@+id/class_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="免费"
                android:textSize="@dimen/contentSize"
                android:textColor="@color/white"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"/>
        </android.support.v7.widget.CardView>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/dividerColor"
        />

</LinearLayout>