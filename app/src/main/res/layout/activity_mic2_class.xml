<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@color/white"
    android:animateLayoutChanges="true">


    <include
        android:id="@+id/mic2_bar"
        layout="@layout/toolbar"
        android:visibility="gone"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/white"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/dividerColor"/>
    <RelativeLayout
        android:id="@+id/class_detail_2"
        android:layout_width="match_parent"
        android:layout_height="140dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/class_detail_img_2"
            android:layout_width="80dp"
            android:layout_height="90dp"
            app:riv_corner_radius="5dp"
            android:src="@drawable/backactivity"
            android:scaleType="centerCrop"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            />

        <TextView
            android:id="@+id/class_detail_title_2"
            android:layout_toLeftOf="@+id/class_detail_level_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="25dp"
            android:text="标题"
            android:textSize="@dimen/appBarSize"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/class_detail_img_2"/>

        <TextView
            android:id="@+id/class_detail_level_2"
            android:layout_toLeftOf="@+id/trade_class"
            android:text="9.7"
            android:layout_marginTop="15dp"
            android:textColor="@color/black"
            android:textSize="@dimen/appBarSize"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginRight="10dp"
            android:layout_marginTop="23dp"
            android:id="@+id/trade_class"
            android:text="分"
            android:textSize="@dimen/tipsSize"
            android:textColor="@color/fontColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"/>
        <TextView
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/class_detail_title_2"
            android:layout_toRightOf="@+id/class_detail_img_2"
            android:id="@+id/teacher_mic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="主讲人: "
            android:textSize="@dimen/contentSize"
            android:textColor="@color/fontColor"/>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_below="@+id/class_detail_title_2"
            android:layout_toRightOf="@+id/teacher_mic"
            android:id="@+id/class_detail_author_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="作者名字"
            android:textSize="@dimen/contentSize"
            android:textColor="@color/fontColor"/>


        <TextView
            android:id="@+id/class_detail_time_2"
            android:layout_below="@+id/teacher_mic"
            android:layout_toRightOf="@+id/class_detail_img_2"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="45分钟"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/divider_class_detail"
            android:layout_toRightOf="@id/class_detail_time_2"
            android:layout_below="@id/class_detail_author_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="|"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:id="@+id/class_detail_count_2"
            android:layout_toRightOf="@+id/divider_class_detail"
            android:layout_below="@+id/class_detail_author_2"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:text="12讲"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/class_detail_level_2"
            android:layout_marginRight="15dp"
            android:layout_marginTop="25dp"
            android:id="@+id/class_detail_price_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥ 9.9"
            android:textColor="@color/orange"
            android:textStyle="bold"
            android:textSize="@dimen/appBarSize" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dividerColor"
            android:layout_below="@id/class_detail_img_2" />
    </RelativeLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/detail_class_tab"
        app:tabIndicatorColor="@color/colorPrimary"
        app:tabIndicatorHeight="2dp"
        app:tabIndicatorFullWidth="false"
        app:tabTextColor="@color/fontColor"
        app:tabSelectedTextColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="40dp">
    </android.support.design.widget.TabLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/dividerColor"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/detail_class_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>


</LinearLayout>