<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <TextView
        android:id="@+id/phone_bind_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="绑定手机号码"
        android:textColor="@color/black"
        android:textSize="@dimen/appBarSize"
        android:padding="8dp"
        android:layout_centerHorizontal="true"/>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/bind_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:met_floatingLabel="normal"
        app:met_floatingLabelText="请输入手机号码"
        android:layout_below="@+id/phone_bind_title"
        android:hint="请输入手机号码"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textSize="@dimen/contentSize"
        android:maxLength="11"
        android:inputType="number"/>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/verify_code_bind"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bind_phone_number"
        android:layout_marginStart="20dp"
        app:met_floatingLabel="normal"
        app:met_floatingLabelText="请输入手机号码"
        android:hint="请输入手机号码"
        android:layout_marginTop="20dp"
        android:textSize="@dimen/contentSize"
        android:inputType="number"
        android:maxLength="6"/>

    <Button
        android:id="@+id/get_verify_code_bind"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bind_phone_number"
        android:layout_marginTop="20dp"
        android:text="获取验证码"
        android:textSize="@dimen/contentSize"
        android:background="@drawable/btnbackground"
        android:textColor="@color/white"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:maxLength="6"
       />
</RelativeLayout>