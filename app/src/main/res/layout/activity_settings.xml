<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/white">

    <include layout="@layout/toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dividerColor">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <RelativeLayout
                android:id="@+id/message_settings"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/ripple"
                android:clickable="true">
                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="消息设置"
                    android:textSize="@dimen/contentSize"
                    android:gravity="center"/>
                <ImageView
                    android:layout_marginRight="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/baseline_keyboard_arrow_right_black_24"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/ripple"
                android:clickable="true"
                android:elevation="3dp">
                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="使用移动数据播放视频"
                    android:textSize="@dimen/contentSize"
                    android:gravity="center"/>
                <Switch
                    android:layout_marginRight="20dp"
                    android:id="@+id/switchnet_settings"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:textOff="关闭移动数据播放"
                    android:textOn="打开移动数据播放"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <RelativeLayout
                android:id="@+id/advice_settings"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/ripple">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="意见反馈"
                    android:textSize="@dimen/contentSize"
                    android:gravity="center"
                    android:layout_marginLeft="20dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/baseline_keyboard_arrow_right_black_24"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="20dp"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <RelativeLayout
                android:id="@+id/clearcache_settings"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/ripple">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="清除缓存"
                    android:textSize="@dimen/contentSize"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/cache_show"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="185KB"
                    android:textSize="@dimen/tipsSize"
                    android:textColor="@color/fontColor"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="20dp"
                    android:gravity="center"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp" />
            <RelativeLayout
                android:id="@+id/check_update_settings"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/ripple"
                android:elevation="3dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="检查更新"
                    android:textSize="@dimen/contentSize"
                    android:gravity="center"
                    android:layout_marginLeft="20dp"/>

                <TextView
                    android:id="@+id/update_show"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="已是最新版本"
                    android:textSize="@dimen/tipsSize"
                    android:textColor="@color/fontColor"
                    android:layout_alignParentEnd="true"
                    android:gravity="center"
                    android:layout_marginRight="20dp"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <Button
                    android:id="@+id/log_out_settings"
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:background="@drawable/logoutback"
                    android:textColor="@color/white"
                    android:text="退出登录"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Design by Leothon"
                    android:layout_marginTop="50dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Program by Leothon"
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Publish by CoGiTo"
                    android:layout_marginTop="20dp"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout> 