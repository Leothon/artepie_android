<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Mvp.View.Fragment.ArticleListPage.ArticleListFragment"
    android:background="@color/white"
    android:fitsSystemWindows="true">



    <android.support.design.widget.AppBarLayout
        android:id="@+id/voice_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:elevation="0dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll"
            android:orientation="vertical">

            <!--<android.support.v7.widget.CardView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="45dp"-->
                <!--app:cardElevation="3dp">-->
                <!--<TextView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:text="文章"-->
                    <!--android:textSize="@dimen/largeTitle"-->
                    <!--android:layout_gravity="left|center"-->
                    <!--android:layout_marginLeft="15dp"/>-->
            <!--</android.support.v7.widget.CardView>-->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp">


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="10dp">
                    <com.leothon.cogito.View.Banner
                        android:id="@+id/article_banner"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </com.leothon.cogito.View.Banner>
                </android.support.v7.widget.CardView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="80dp"
                    android:layout_marginBottom="10dp"
                    android:background="#76b3b3b3">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:maxLines="1"
                        android:text="标题"
                        android:textColor="@color/white"
                        android:textSize="@dimen/contentSize"
                        android:id="@+id/banner_title_article"/>
                </RelativeLayout>
            </FrameLayout>


        </LinearLayout>
        <include
            android:id="@+id/voice_bar"
            layout="@layout/toolbar"
            android:visibility="gone"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            app:cardElevation="3dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView

                    android:text="文章"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/largeTitle"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="15dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="写文章"
                    android:textSize="@dimen/contentSize"
                    android:textColor="@color/fontColor"
                    android:id="@+id/write_article"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="8dp"/>
                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/write_img"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/write"
                    android:layout_toLeftOf="@+id/write_article"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="3dp"/>
            </RelativeLayout>


        </android.support.v7.widget.CardView>


        <!--&lt;!&ndash;<android.support.design.widget.TabLayout&ndash;&gt;-->
            <!--&lt;!&ndash;android:id="@+id/mic_class_tab"&ndash;&gt;-->
            <!--&lt;!&ndash;app:tabIndicatorColor="@color/colorPrimary"&ndash;&gt;-->
            <!--&lt;!&ndash;app:tabIndicatorHeight="2dp"&ndash;&gt;-->
            <!--&lt;!&ndash;app:tabIndicatorFullWidth="false"&ndash;&gt;-->
            <!--&lt;!&ndash;app:tabTextColor="@color/fontColor"&ndash;&gt;-->
            <!--&lt;!&ndash;app:tabSelectedTextColor="@color/black"&ndash;&gt;-->
            <!--&lt;!&ndash;android:layout_width="match_parent"&ndash;&gt;-->
            <!--&lt;!&ndash;android:layout_height="40dp">&ndash;&gt;-->
        <!--&lt;!&ndash;</android.support.design.widget.TabLayout>&ndash;&gt;-->
    </android.support.design.widget.AppBarLayout>



    <!--<View-->
        <!--android:layout_width="match_parent"-->
