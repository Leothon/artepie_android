<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="40dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/btn_font_size_small"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:srcCompat="@drawable/spanstyle"
        android:tint="@color/fontColor"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"/>

    <ImageView
        android:id="@+id/btn_font_size_normal"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:srcCompat="@drawable/spanstyle"
        android:layout_centerVertical="true"
        android:tint="@color/fontColor"
        android:layout_toRightOf="@+id/btn_font_size_small"
        android:layout_marginLeft="10dp"/>

    <ImageView
        android:id="@+id/btn_font_size_big"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:tint="@color/fontColor"
        app:srcCompat="@drawable/spanstyle"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/btn_font_size_normal"
        android:layout_marginLeft="10dp"/>
</RelativeLayout>