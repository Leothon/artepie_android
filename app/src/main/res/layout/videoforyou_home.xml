<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="15dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="15dp"
    android:background="@drawable/gradient_all">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/foryou_iv"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    app:riv_corner_radius="15dp" />





                        <RelativeLayout
                            android:id="@+id/class_all_info"
                            android:layout_width="0dp"
                            android:layout_weight="4"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:layout_gravity="center_vertical">
                                <TextView
                                    android:id="@+id/foryou_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="这个地方显示视频的标题"
                                    android:textSize="@dimen/littleTitle"
                                    android:textStyle="bold"
                                    android:maxLines="1"
                                    android:textColor="@color/black" />

                                <TextView
                                    android:layout_below="@+id/foryou_tv"
                                    android:layout_marginTop="5dp"
                                    android:id="@+id/foryou_author"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="刘慈欣"
                                    android:textSize="@dimen/contentSize"
                                    android:textColor="@color/black"
                                    />

                                <TextView
                                    android:id="@+id/foryou_desc"
                                    android:layout_below="@+id/foryou_author"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="简介"
                                    android:maxLines="2"
                                    android:layout_marginTop="5dp"
                                    android:ellipsize="end"
                                    android:textSize="@dimen/tipsSize"
                                    android:textColor="@color/fontColor"/>


                                <TextView
                                    android:id="@+id/for_serialize"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:layout_below="@+id/foryou_desc"
                                    android:background="@drawable/serializebtn"
                                    android:text="已完结"
                                    android:textSize="@dimen/littleSize"
                                    android:textColor="@color/white"
                                    android:padding="3dp"
                                    />

                                <TextView
                                    android:layout_below="@+id/for_serialize"
                                    android:layout_marginTop="10dp"
                                    android:id="@+id/foryou_count"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0人次已观看"
                                    android:textSize="@dimen/tipsSize"
                                    android:textColor="@color/fontColor"
                                    />
                                <TextView
                                    android:layout_below="@+id/for_serialize"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginTop="10dp"
                                    android:id="@+id/foryou_price"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="免费"
                                    android:textSize="@dimen/littleTitle"
                                    android:textColor="@color/colorPrimary"
                                    />


                </RelativeLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/for_authorize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/authorize_btn"
            android:text="官方课程"
            android:textColor="@color/white"
            android:textSize="@dimen/tipsSize"
            android:textStyle="bold"
            android:padding="8dp"/>


</RelativeLayout>
