<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="180dp">

        <com.leothon.cogito.View.Banner
            android:id="@+id/article_banner"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </com.leothon.cogito.View.Banner>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="120dp"
            android:layout_marginBottom="10dp"
            android:background="#76b3b3b3">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:maxLines="1"
                android:text="标题"
                android:textColor="@color/white"
                android:textSize="@dimen/contentSize"
                android:id="@+id/banner_title_article"/>
        </RelativeLayout>
    </FrameLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:cardElevation="2dp"
        android:layout_marginBottom="3dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="文章列表"
                android:textColor="@color/fontColor"
                android:textSize="@dimen/appBarSize"
                android:layout_centerVertical="true"
                android:paddingStart="20dp"/>

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/article_icon_title"
                app:riv_border_width="1dp"
                app:riv_border_color="@color/dividerColor"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                app:riv_oval="true"
                android:src="@drawable/defaulticon"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>