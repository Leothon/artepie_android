<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


<!--        <com.leothon.cogito.View.Banner-->
<!--            android:id="@+id/article_banner"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent">-->
<!--        </com.leothon.cogito.View.Banner>-->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.zhouwei.mzbanner.MZBannerView
            android:id="@+id/article_banner"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:open_mz_mode="true"
            app:canLoop="true"
            app:indicatorAlign="center"
            app:indicatorPaddingLeft="10dp"
            app:middle_page_cover="false"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="120dp"
            android:background="#76b3b3b3">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:maxLines="1"
                android:text="标题"
                android:textColor="@color/white"
                android:textSize="@dimen/contentSize"
                android:id="@+id/banner_title_article"/>
        </RelativeLayout>

    </FrameLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="文章列表"
                android:textColor="@color/fontColor"
                android:textSize="@dimen/appBarSize"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:paddingStart="20dp"/>

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/article_icon_title"
                app:riv_border_width="2dp"
                app:riv_border_color="@color/dividerColor"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                app:riv_oval="true"
                android:src="@drawable/defaulticon"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"/>
        </RelativeLayout>



</LinearLayout>