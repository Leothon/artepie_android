<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    tools:context=".Mvp.View.Activity.CustomActivity.CustomFragment.Custom3Fragment">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/use_bg"
            android:layout_marginTop="45dp"
            android:paddingBottom="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">q

            <ImageView
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:src="@drawable/useicon"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="选择用途"
                    android:textSize="@dimen/largeTitle"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:padding="15dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请选择您的所需作品的用途，最多可选五项"
                    android:textSize="@dimen/littleTitle"
                    android:textColor="@color/white"
                    android:paddingStart="@dimen/_15dp"/>
            </LinearLayout>

        </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/_15dp"
        android:paddingEnd="@dimen/_15dp"
        android:paddingTop="@dimen/_15dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="广告"
            android:textSize="@dimen/largeTitle"
            android:textColor="@color/black"
            android:padding="10dp"/>

        <com.zhy.view.flowlayout.TagFlowLayout
            android:id="@+id/use1_choose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            zhy:max_select="4"
            android:layout_marginTop="10dp">
        </com.zhy.view.flowlayout.TagFlowLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_15dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="影视"
            android:textSize="@dimen/largeTitle"
            android:textColor="@color/black"
            android:padding="10dp"/>

        <com.zhy.view.flowlayout.TagFlowLayout
            android:id="@+id/use2_choose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            zhy:max_select="3"
            android:layout_marginTop="10dp">
        </com.zhy.view.flowlayout.TagFlowLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_15dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="游戏"
            android:textSize="@dimen/largeTitle"
            android:textColor="@color/black"
            android:padding="10dp"/>

        <com.zhy.view.flowlayout.TagFlowLayout
            android:id="@+id/use3_choose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            zhy:max_select="4"
            android:layout_marginTop="10dp">
        </com.zhy.view.flowlayout.TagFlowLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_15dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="节庆"
            android:textSize="@dimen/largeTitle"
            android:textColor="@color/black"
            android:padding="10dp"/>

        <com.zhy.view.flowlayout.TagFlowLayout
            android:id="@+id/use4_choose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            zhy:max_select="4"
            android:layout_marginTop="10dp">
        </com.zhy.view.flowlayout.TagFlowLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_15dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="视频"
            android:textSize="@dimen/largeTitle"
            android:textColor="@color/black"
            android:padding="10dp"/>

        <com.zhy.view.flowlayout.TagFlowLayout
            android:id="@+id/use5_choose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            zhy:max_select="4"
            android:layout_marginTop="10dp">
        </com.zhy.view.flowlayout.TagFlowLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_15dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="公播"
            android:textSize="@dimen/largeTitle"
            android:textColor="@color/black"
            android:padding="10dp"/>

        <com.zhy.view.flowlayout.TagFlowLayout
            android:id="@+id/use6_choose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            zhy:max_select="4"
            android:layout_marginTop="10dp">
        </com.zhy.view.flowlayout.TagFlowLayout>
    </LinearLayout>
    </LinearLayout>
        <!--<ListView-->
            <!--android:id="@+id/id_listview"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:divider="@null"-->
            <!--android:padding="@dimen/_15dp"-->
            <!--android:scrollbars="none">-->

        <!--</ListView>-->

</ScrollView>