<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="@dimen/_15dp"
    android:layout_marginEnd="@dimen/_15dp"
    android:layout_marginBottom="@dimen/_15dp"
    android:layout_marginTop="10dp">

    <RelativeLayout
        android:id="@+id/tap_to_custom"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/tap_back">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:src="@drawable/tap_back_icon"
            android:layout_alignParentEnd="true"
            android:scaleType="centerCrop"
            android:tint="@color/white"/>


        <ImageView
            android:id="@+id/tap_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:src="@drawable/tap_icon"
            android:scaleType="centerCrop"/>

        <TextView
            android:layout_toRightOf="@+id/tap_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AIS商业音乐定制"
            android:textSize="@dimen/contentSize"
            android:textColor="@color/card_tap_to"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"/>

        <ImageView
            android:layout_width="36dp"
            android:scaleType="centerCrop"
            android:layout_height="36dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/tap_img"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tap_to_custom"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:background="@drawable/gradient_all">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <RelativeLayout
                android:id="@+id/test1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/test_img1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/minzu"
                    android:layout_centerInParent="true"
                    />
                <TextView
                    android:layout_below="@+id/test_img1"
                    android:id="@+id/test_title1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:text="美声"
                    android:textColor="@color/fontColor"
                    android:textSize="@dimen/tipsSize"
                    android:gravity="center"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/test2"
