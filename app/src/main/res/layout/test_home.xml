<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="5dp"
    android:clipToPadding="false"
    android:clipChildren="false">

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/dividerColor"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical"
        android:elevation="3dp">
        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginTop="@dimen/tagNameabove"
            android:layout_marginStart="8dp"
            android:gravity="center"
            android:text="艺考曲目"
            android:textColor="@color/white"
            android:background="@drawable/textviewbackgroundshow"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <FrameLayout
                android:id="@+id/test1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp">
                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/test_img1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/meisheng"
                    android:scaleType="centerCrop"
                    app:riv_oval="true"/>
                <TextView
                    android:id="@+id/test_title1"
                    android:layout_width="56dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="3dp"
                    android:text="美声的唱法"
                    android:textColor="@color/white"
                    android:textSize="@dimen/littleSize"
                    android:gravity="center"
                    android:background="#60000000"/>
            </FrameLayout>
            <FrameLayout
                android:id="@+id/test2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp">
                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/test_img2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    app:riv_oval="true"
                    android:src="@drawable/minzu"/>
                <TextView
                    android:id="@+id/test_title2"
                    android:layout_width="56dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="3dp"
                    android:text="美声的唱法"
                    android:textColor="@color/white"
                    android:textSize="@dimen/littleSize"
                    android:gravity="center"
                    android:background="#60000000" />
            </FrameLayout>
            <FrameLayout
                android:id="@+id/test3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp">
                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/test_img3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    app:riv_oval="true"
                    android:src="@drawable/tongsu"/>
                <TextView
                    android:id="@+id/test_title3"
                    android:layout_width="56dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="3dp"
                    android:text="美声的唱法"
                    android:textColor="@color/white"
                    android:textSize="@dimen/littleSize"
                    android:gravity="center"
                    android:background="#60000000" />
            </FrameLayout>
            <FrameLayout
                android:id="@+id/test4"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp">
                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/test_img4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    app:riv_oval="true"
                    android:src="@drawable/yuanshengtai"/>
                <TextView
                    android:id="@+id/test_title4"
                    android:layout_width="56dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="3dp"
                    android:text="美声的唱法"
                    android:textColor="@color/white"
                    android:textSize="@dimen/littleSize"
                    android:gravity="center"
                    android:background="#60000000" />
            </FrameLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="3dp"
            android:orientation="horizontal">
            <FrameLayout
                android:id="@+id/test5"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp">
                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/test_img5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    app:riv_oval="true"
                    android:src="@drawable/minyao"/>
                <TextView
                    android:id="@+id/test_title5"
                    android:layout_width="56dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="3dp"
                    android:text="美声的唱法"
                    android:textColor="@color/white"
                    android:textSize="@dimen/littleSize"
                    android:gravity="center"
                    android:background="#60000000" />
            </FrameLayout>
            <FrameLayout
                android:id="@+id/test6"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp">
                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/test_img6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    app:riv_oval="true"
                    android:src="@drawable/shuochang"/>
                <TextView
                    android:id="@+id/test_title6"
                    android:layout_width="56dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="3dp"
                    android:text="美声的唱法"
                    android:textColor="@color/white"
                    android:textSize="@dimen/littleSize"
                    android:gravity="center"
                    android:background="#60000000" />
            </FrameLayout>
            <FrameLayout
                android:id="@+id/test7"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp">
                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/test_img7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    app:riv_oval="true"
                    android:src="@drawable/jueshi"/>
                <TextView
                    android:id="@+id/test_title7"
                    android:layout_width="56dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="3dp"
                    android:text="美声的唱法"
                    android:textColor="@color/white"
                    android:textSize="@dimen/littleSize"
                    android:gravity="center"
                    android:background="#60000000" />
            </FrameLayout>
            <android.support.v7.widget.CardView
                android:id="@+id/test8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="10dp"
                android:elevation="3dp"
                app:cardBackgroundColor="@color/white"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:tint="@color/fontColor"
                    android:src="@drawable/baseline_more_black_24" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="bottom"
                    android:text="查看更多"
                    android:textSize="8sp"
                    android:textColor="@color/fontColor"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    />
            </android.support.v7.widget.CardView>
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/dividerColor"
        android:layout_gravity="bottom"/>

</FrameLayout>