<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/icon_rl_comment_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp">
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/user_icon_video_comment_detail"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/defaulticon"
                app:riv_oval="true"
                android:scaleType="centerCrop"
                android:layout_centerInParent="true"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/comment_rl_comment_detail"
            android:layout_toRightOf="@+id/icon_rl_comment_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_marginLeft="10dp">
            <TextView
                android:id="@+id/user_name_video_comment_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="名字"
                android:textSize="@dimen/littleTitle"
                android:maxLength="8"
                android:textColor="@color/black"
                android:layout_gravity="top|start"/>

            <TextView
                android:id="@+id/user_comment_video_comment_detail"
                android:layout_below="@+id/user_name_video_comment_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="评论"
                android:textSize="@dimen/contentSize"
                android:padding="10dp"
                android:textColor="@color/fontColor"/>
        </RelativeLayout>
        <ImageView
            android:id="@+id/detail_comment_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_more_horiz_black_24"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="20dp"
            android:padding="8dp"/>
        <RelativeLayout
            android:id="@+id/time_like_comment"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/comment_rl_comment_detail">
            <TextView
                android:id="@+id/comment_time_qa_comment_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="时间"
                android:layout_marginStart="62dp"
                android:layout_centerVertical="true"/>

            <ImageView
                android:id="@+id/like_img_qa_comment_detail"
                android:layout_toLeftOf="@+id/comment_like_qa_comment_detail"
                android:layout_marginRight="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_favorite_border_black_18"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/comment_like_qa_comment_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <View
            android:id="@+id/divider_comment_detail"
            android:layout_below="@+id/time_like_comment"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@color/dividerColor"/>

        <RelativeLayout
            android:layout_below="@+id/divider_comment_detail"
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <TextView
                android:id="@+id/reply_count_comment_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0条回复"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"/>
        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>