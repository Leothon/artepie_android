<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/dividerColor"
    android:orientation="vertical">

    <include layout="@layout/toolbar"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
    <RelativeLayout
        android:id="@+id/edit_icon"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/ripple"
        android:clickable="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="头像"
            android:gravity="center"
            android:layout_marginLeft="20dp"/>

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/edit_user_icon"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:src="@drawable/musicdefalut"
            app:riv_oval="true"
            android:layout_toLeftOf="@+id/into"
            android:layout_margin="10dp"
            android:scaleType="centerCrop"/>
        <ImageView
            android:id="@+id/into"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:src="@drawable/baseline_keyboard_arrow_right_black_24"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <RelativeLayout
        android:id="@+id/edit_name"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/ripple"
        android:clickable="true"
        android:elevation="3dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="昵称"
            android:gravity="center"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/edit_user_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/musicdefalut"
            android:text="Leothon"
            android:gravity="center"
            android:textSize="@dimen/tipsSize"
            android:layout_toLeftOf="@+id/into1"
            android:layout_margin="10dp"/>
        <ImageView
            android:id="@+id/into1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:src="@drawable/baseline_keyboard_arrow_right_black_24"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
    <RelativeLayout
        android:id="@+id/edit_sex"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/ripple"
        android:clickable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="性别"
            android:gravity="center"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/edit_user_sex"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/musicdefalut"
            android:text="男"
            android:gravity="center"
            android:textSize="@dimen/tipsSize"
            android:layout_toLeftOf="@+id/into2"
            android:layout_margin="10dp"/>
        <ImageView
            android:id="@+id/into2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:src="@drawable/baseline_keyboard_arrow_right_black_24"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <RelativeLayout
        android:id="@+id/edit_birth"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/ripple"
        android:clickable="true"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="生日"
            android:gravity="center"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/edit_user_birth"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/musicdefalut"
            android:text="选择出生年月"
            android:gravity="center"
            android:textSize="@dimen/tipsSize"
            android:layout_toLeftOf="@+id/into3"
            android:layout_margin="10dp"/>
        <ImageView
            android:id="@+id/into3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:src="@drawable/baseline_keyboard_arrow_right_black_24"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <RelativeLayout
        android:id="@+id/edit_phone"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/ripple"
        android:clickable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="修改绑定号码"
            android:gravity="center"
            android:layout_marginLeft="20dp"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:src="@drawable/baseline_keyboard_arrow_right_black_24"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <RelativeLayout
        android:id="@+id/edit_signal"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/ripple"
        android:clickable="true"
        android:elevation="3dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="修改签名"
            android:gravity="center"
            android:layout_marginLeft="20dp"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:src="@drawable/baseline_keyboard_arrow_right_black_24"/>
    </RelativeLayout>


    <Button
        android:id="@+id/edit_person_info"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="@drawable/btnbackground"
        android:text="完成"
        android:textSize="@dimen/littleTitle"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>
</LinearLayout> 