<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/white">

    <include 
        android:id="@+id/upload_bar"
        layout="@layout/toolbar"/>

    <ScrollView
        android:layout_below="@+id/upload_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/title_sub_class_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="单节课程标题(若该课程只有一节课，则忽略)"
                android:textSize="@dimen/littleTitle"
                android:padding="5dp"
                android:layout_margin="3dp"
                app:met_clearButton="true"
                app:met_textColor="@color/black" />
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/content_class_detail"
                android:layout_below="@+id/title_sub_class_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="输入课程的文本内容"
                android:textSize="@dimen/contentSize"
                android:maxLines="10"
                android:minLines="8"
                android:gravity="top|start"
                android:padding="5dp"
                app:met_hideUnderline="true"
                app:met_floatingLabel="normal"
                app:met_floatingLabelText="课程文本内容"/>

            <RelativeLayout
                android:id="@+id/video_audio_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>


    <RelativeLayout
        android:id="@+id/upload_bottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/ripple"
        android:clickable="true">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dividerColor"/>
        <ImageView
            android:id="@+id/upload_add_video"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:background="@drawable/ripple"
            android:src="@drawable/baseline_videocam_black_24"
            android:tint="@color/askImg"
            android:layout_centerInParent="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="20dp"/>

        <ImageView
            android:id="@+id/upload_add_sound"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:background="@drawable/ripple"
            android:src="@drawable/sound"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@+id/upload_add_video"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:id="@+id/add_btn_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="完成"
            android:textSize="@dimen/contentSize"
            android:textColor="@color/white"
            android:background="@drawable/textviewbackgroundshow"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_centerInParent="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp"/>

    </RelativeLayout>

</RelativeLayout> 