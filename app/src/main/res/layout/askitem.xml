<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ripple"
    android:elevation="3dp">


    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/dividerColor"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/user_icon_ask"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/defalutimg"
            android:layout_margin="8dp"
            app:riv_oval="true"
            android:scaleType="centerCrop"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="3dp">
            <TextView
                android:id="@+id/user_name_ask"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/littleTitle"
                android:text="张三丰" />
            <TextView
                android:id="@+id/user_des_ask"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="佛教创始人"
                android:textSize="@dimen/tipsSize"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">
            <TextView
                android:id="@+id/content_ask"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="张三丰张三丰"
                android:textSize="@dimen/contentSize"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"/>

            <LinearLayout
                android:id="@+id/pic_layout_ask"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/image_in_context1"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/defalutimg"
                        android:visibility="visible"
                        android:scaleType="centerCrop"
                        android:layout_margin="5dp"/>
                    <ImageView
                        android:id="@+id/image_in_context2"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/defalutimg"
                        android:visibility="visible"
                        android:scaleType="centerCrop"
                        android:layout_margin="5dp"/>
                    <ImageView
                        android:id="@+id/image_in_context3"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/defalutimg"
                        android:visibility="visible"
                        android:scaleType="centerCrop"
                        android:layout_margin="5dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/image_in_context4"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/defalutimg"
                        android:visibility="visible"
                        android:scaleType="centerCrop"
                        android:layout_margin="5dp"/>
                    <ImageView
                        android:id="@+id/image_in_context5"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/defalutimg"
                        android:visibility="visible"
                        android:scaleType="centerCrop"
                        android:layout_margin="5dp"/>
                    <ImageView
                        android:id="@+id/image_in_context6"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/defalutimg"
                        android:visibility="visible"
                        android:scaleType="centerCrop"
                        android:layout_margin="5dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/image_in_context7"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/defalutimg"
                        android:visibility="visible"
                        android:scaleType="centerCrop"
                        android:layout_margin="5dp"/>
                    <ImageView
                        android:id="@+id/image_in_context8"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/defalutimg"
                        android:visibility="visible"
                        android:scaleType="centerCrop"
                        android:layout_margin="5dp"/>
                    <ImageView
                        android:id="@+id/image_in_context9"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/defalutimg"
                        android:visibility="visible"
                        android:scaleType="centerCrop"
                        android:layout_margin="5dp"/>
                </LinearLayout>
            </LinearLayout>
    </LinearLayout>
</LinearLayout>

