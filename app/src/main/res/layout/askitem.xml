<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="8dp"
    app:cardElevation="3dp"
    android:layout_margin="5dp">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="8dp"-->
        <!--android:background="@color/dividerColor"/>-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/user_icon_ask"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/defalutimg"
            android:layout_margin="8dp"
            app:riv_oval="true"
            android:scaleType="centerCrop"/>
        <LinearLayout
            android:layout_toRightOf="@+id/user_icon_ask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="8dp">
            <TextView
                android:id="@+id/user_name_ask"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/littleTitle"
                android:text="张三丰" />
            <TextView
                android:id="@+id/user_des_ask"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="佛教创始人"
                android:textSize="@dimen/tipsSize"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/more_ask"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_more_horiz_black_24"
            android:layout_centerInParent="true"
            android:padding="8dp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">
            <TextView
                android:id="@+id/content_ask"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="张三丰张三丰"
                android:textColor="@color/black"
                android:textSize="@dimen/contentSize"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"/>


        <RelativeLayout
            android:id="@+id/re_content_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/recontentback"
            android:layout_margin="5dp"
            android:visibility="gone"
            android:padding="3dp">

            <TextView
                android:id="@+id/re_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#Leothon: "
                android:textColor="@color/actionsheet_blue"
                android:padding="5dp"/>
            <TextView
                android:id="@+id/re_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="内容"
                android:layout_below="@+id/re_user_name"
                android:textSize="@dimen/contentSize"
                android:textColor="@color/black"
                android:padding="5dp"/>

            <TextView
                android:id="@+id/re_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点赞"
                android:textColor="@color/fontColor"
                android:textSize="@dimen/tipsSize"
                android:layout_below="@+id/re_content"
                android:padding="5dp"/>

            <TextView
                android:id="@+id/re_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="评论"
                android:textColor="@color/fontColor"
                android:textSize="@dimen/tipsSize"
                android:layout_below="@+id/re_content"
                android:layout_toRightOf="@+id/re_like"
                android:padding="5dp"/>
            <com.shuyu.gsyvideoplayer.video.StandardGSYVideoPlayer
                android:layout_below="@+id/re_like"
                android:layout_margin="8dp"
                android:id="@+id/re_video_player"
                android:layout_width="match_parent"
                android:layout_height="@dimen/post_media_height"/>
        </RelativeLayout>
            <com.shuyu.gsyvideoplayer.video.StandardGSYVideoPlayer
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/video_item_player"
                android:layout_width="match_parent"
                android:layout_height="@dimen/post_media_height"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/dividerColor"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">
        <TextView
            android:layout_marginLeft="20dp"
            android:padding="3dp"
            android:id="@+id/like_ask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/baseline_favorite_border_black_18"
            android:drawableTint="@color/fontColor"
            android:text="喜欢"
            android:textSize="@dimen/tipsSize"
            android:textColor="@color/fontColor"/>
        <TextView
            android:layout_marginLeft="20dp"
            android:padding="3dp"
            android:layout_toRightOf="@+id/like_ask"
            android:id="@+id/comment_ask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/baseline_message_black_18"
            android:drawableTint="@color/fontColor"
            android:text="评论"
            android:textSize="@dimen/tipsSize"
            android:textColor="@color/fontColor"/>
        <ImageView
            android:id="@+id/re_btn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/retw"
            android:tint="@color/fontColor"
            android:layout_toRightOf="@+id/comment_ask"
            android:layout_marginLeft="20dp"
            android:padding="3dp"/>
    </RelativeLayout>
</LinearLayout>
</android.support.v7.widget.CardView>
