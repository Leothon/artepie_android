<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/white">

    <include
        android:id="@+id/pay_info_bar"
        layout="@layout/toolbar"/>

    <ScrollView
        android:layout_below="@+id/pay_info_bar"
        android:layout_above="@+id/pay_info_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/dividerColor"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:elevation="3dp"
                android:orientation="horizontal"
                android:background="@drawable/ripple">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent">
                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/pay_info_img"
                        app:riv_corner_radius="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_centerInParent="true"
                        android:layout_alignParentTop="true"
                        android:scaleType="centerCrop"
                        android:layout_margin="8dp"
                        android:src="@drawable/defalutimg"/>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/title_pay_info"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="课程的名字"
                        android:layout_marginTop="10dp"/>
                    <TextView
                        android:id="@+id/des_pay_info"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:text="课程的描述"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="5dp"/>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent">
                    <Button
                        android:id="@+id/show_price_pay_info"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:background="@drawable/btnbackground"
                        android:text="￥386"
                        android:textColor="@color/white"
                        android:layout_centerInParent="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="可使用艺币折扣"
                        android:layout_below="@+id/show_price_pay_info"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="20dp"/>
                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/dividerColor"/>

            <RelativeLayout
                android:id="@+id/art_coin_rebate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ripple">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="艺币折扣"
                    android:textColor="@color/fontColor"
                    android:layout_margin="15dp"/>

                <TextView
                    android:id="@+id/art_coin_use_rebate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20"
                    android:layout_centerInParent="true"
                    android:layout_toLeftOf="@+id/pay_info_right"
                    android:layout_marginRight="20dp"/>
                <ImageView
                    android:id="@+id/pay_info_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_keyboard_arrow_right_black_36"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/dividerColor"/>


            <LinearLayout
                android:id="@+id/activity_layout_pay_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/dividerColor"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:background="@drawable/ripple"
                    android:clickable="true">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="时间："
                        android:textColor="@color/fontColor"/>
                    <TextView
                        android:id="@+id/activity_time_pay_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2018-9-21 13:00"
                        android:textColor="@color/fontColor"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/dividerColor"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:background="@drawable/ripple"
                    android:clickable="true">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="地点："
                        android:textColor="@color/fontColor"/>
                    <TextView
                        android:id="@+id/activity_address_pay_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="北京朝阳区"
                        android:textColor="@color/fontColor"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/dividerColor"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:background="@drawable/ripple"
                    android:clickable="true">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="参加人数："
                        android:textColor="@color/fontColor"/>
                    <TextView
                        android:id="@+id/activity_person_count_pay_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2 人"
                        android:textColor="@color/fontColor"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/dividerColor"/>
                <TextView
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请确认信息无误之后，确认提交"
                    android:layout_gravity="center" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


    <RelativeLayout
        android:id="@+id/pay_info_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/ripple"
        android:clickable="true">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dividerColor"/>
        <TextView
            android:id="@+id/rebate_pay_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已优惠："
            android:layout_centerInParent="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:textColor="@color/fontColor"/>
        <TextView
            android:id="@+id/pay_info_rebate"
            android:layout_toRightOf="@+id/rebate_pay_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥56"
            android:layout_centerInParent="true"
            android:textColor="@color/fontColor"/>

        <Button
            android:id="@+id/pay_info_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/pay_btn_back"
            android:layout_alignParentEnd="true"
            android:text="提交支付"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/pay_info_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥152"
            android:textColor="@color/black"
            android:textSize="@dimen/largeTitle"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@+id/pay_info_btn"
            android:layout_marginRight="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="合计："
            android:textColor="@color/black"
            android:layout_toLeftOf="@+id/pay_info_price"/>
    </RelativeLayout>


</RelativeLayout>